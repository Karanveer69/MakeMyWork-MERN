<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MakeMyWork</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body> 
    <div class="first-page">
        <div class="logo-container">
            <img src="logo.png" alt="Logo" class="logo">
        </div>
        <div class="nav-items"><a href="index">Home</a></div>
        <div class="nav-items"><a href="aboutus">About Us</a>
            
            <button type="button" class="btn btn-danger Explore-Work"><a href="postwork">Add Work</a></button>
        </div>
        
        <div class="nav-items"><a href="#">Service</a></div>
        <div class="nav-items nav-items-right1">
            <button type="button" class="btn btn-outline-danger">
                <a href="#" class="exclude-hover">Hi, <% if (typeof loggedInUsername !== 'undefined' && loggedInUsername) { %>
                    <p><%= loggedInUsername %></p>
                <% } %></a>
            </button>
        </div>
        <div class="nav-items nav-items-right2"><button type="button" class="btn btn-outline-danger"><a href="chatroom">ChatRoom</a></button></div>
    </div>

    <div class="second-image">
        <div class="heading"><h3>Make My Work</h3></div>
        <div class="subheading"><h2>Connecting Talent <br> With Opportunity</h2></div>
    </div> 

    <div class="black-bg">
        <h2>Explore Work</h2>
        <hr>
        <div class="job-cards" id="job-cards">
            <% tasks.forEach(task => { %>
                <div class="card">
                    <div class="taskOwner"><h6>Posted by: <%= task.taskOwner %> </h6></div>
                    <div class="image" style="background-image: url('<%= task.images[0] %>');"></div>
                    <div class="title"><%= task.title %></div>
                    <div class="description"><h6>Description:</h6><%= task.description %></div>
                    <div class="deadline"><h6>Deadline:</h6><span class="deadline-date"><%= task.deadline %></span></div>
                    <div class="price">$<%= task.price %></div>
                    <span class="chat-button">
                        <a href="/chat/<%= task._id %>">
                            <img src="chat-icon.jpg" alt="Chat Icon" class="chat-icon"> 
                        </a>
                    </span>
                    <% if (loggedInUsername === task.taskOwner) { %>
                        <button class="edit-button">Edit</button>
                    <% } %>
                </div>
            <% }); %>
        </div>
    </div>

    <!--footer-->
    <hr>
    <div class="container">
        <footer class="footer">
            <div class="container2">
                <div class="row">
                    <div class="footer-col">
                        <h4>company</h4>
                        <ul>
                            <li><a href="#">about us</a></li>
                            <li><a href="#">our services</a></li>
                            <li><a href="#">privacy policy</a></li>
                            <li><a href="#">affiliate program</a></li>
                        </ul>
                    </div>
                    <div class="footer-col">
                        <h4>get help</h4>
                        <ul>
                            <li><a href="#">FAQ</a></li>
                            <li><a href="#">shipping</a></li>
                            <li><a href="#">returns</a></li>
                            <li><a href="#">order status</a></li>
                            <li><a href="#">payment options</a></li>
                        </ul>
                    </div>
                    
                    <div class="footer-col">
                        <h4>follow us</h4>
                        <div class="social-links">
                            <a href="#"><i class="fab fa-facebook-f"></i></a>
                            <a href="#"><i class="fab fa-twitter"></i></a>
                            <a href="https://www.instagram.com/annapurna0.official?utm_source=ig_web_button_share_sheet&igsh=ZDNlZDc0MzIxNw=="><i class="fab fa-instagram"></i></a>
                            <a href="#"><i class="fab fa-linkedin-in"></i></a>
                        </div>
                    </div>
                </div>
                <div class="tnc" style="color: white;">
                    Terms & Conditions
                </div>
            </div>
            
        </footer>
    </div>
    
<!--Sticky feedback button-->    
    <div class="container7">
        <div class="stickybutton">
            <a href="feedback.html">
            <button class = "btn btn-info btn-lg" style="cursor: pointer; bottom: 50px;">
                FEEDBACK
                
            </button>
            </a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Load jQuery before the script -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.deadline-date').each(function() {
                const dateStr = $(this).text();
                const date = new Date(dateStr);
                const options = { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric' };
                const formattedDate = date.toLocaleDateString('en-US', options);
                $(this).text(formattedDate);
            });
        });
    </script>
</body>
</html>
