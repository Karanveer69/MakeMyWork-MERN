    <title>Create Account</title>
  </head>
  <body>
    <div class="heading">
      <h1>New User</h1>
    </div>

    <div>
      <form action="signup" method = "post">
        <div class="image">
          <img src="3.jpeg" alt = "LOGO">
        </div>
       
        <div class="form-floating mb-3">
          <input type="name" class="form-control" name="username" placeholder="Create Your Username">
          <label for="username">Username</label>
        </div>
        <div class="form-floating mb-3">
          <input type="password" class="form-control" name="password" placeholder="Password">
          <label for="password">Password</label>
        </div>
        <input type="submit">
        

        <div class="form-check form-switch ml-30">
          <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" checked>
          <label class="form-check-label" for="flexSwitchCheckChecked">Remember me <a href="#">Need Help?</a></label>
        </div>
      </form>
    </div>

