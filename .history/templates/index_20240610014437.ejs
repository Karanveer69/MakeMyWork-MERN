<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MakeMyWork</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body> 
    <div class="first-page">
      <div class="logo-container">
          <img src="logo.png" alt="Logo" class="logo">
      </div>
      <div class="nav-items"><a href="index">Home</a></div>
      <div class="nav-items"><a href="aboutus">About Us</a>
        <button type="button" class="btn btn-danger Explore-Work"><a href=""></a>Add Work</button></div>
      <div class="nav-items"><a href="#">Service</a></div>
      <div class="nav-items">
          <button type="button" class="btn btn-outline-danger">
              <a href="#" class="exclude-hover">Hi, <% if (typeof loggedInUsername !== 'undefined' && loggedInUsername) { %>
                  <p><%= loggedInUsername %></p>
              <% } %></a>
          </button>
      </div>
      <div class="nav-items"><button type="button" class="btn btn-outline-danger"><a href="chatroom">ChatRoom</a></button></div>
      
    </div>
        
    
    <div class="black-bg">
      <br>
      <h2>Explore Work</h2>
      <hr>
      <br>
      <br>
      <br>
      <br>
      <div class="job-cards">
          <% tasks.forEach(task => { %>
              <div class="card">
                  <div class="taskOwner">Posted by: <%= task.taskOwner %></div> <!-- Display the task owner's username -->
                  <div class="image" style="background-image: url('<%= task.images[0] %>');"></div>
                  <div class="title"><%= task.title %></div>
                  <div class="description"><%= task.description %></div>
                  <div class="deadline"><%= task.deadline %></div>
                  <div class="price">$<%= task.price %></div>
                  <span class="chat-button">
                    <a href="/chat/<%= task._id %>">
                        <img src="chat-icon.jpg" alt="Chat Icon" class="chat-icon"> 
                    </a>
                </span>
                  <% if (loggedInUsername === task.taskOwner) { %>
                      <button class="edit-button">Edit</button>
                  <% } %>
              </div>
          <% }); %>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
